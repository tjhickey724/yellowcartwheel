<%- include('bootheader') -%>
<%- include('menubar') -%>
    <div class="jumbotron">
        <h1>Forum</h1>
        <p>Demonstrating a threaded forum</p>
    </div>

    <form method="post" action="/forum">
      New Post: <br>
      <textarea id="post" name="post"></textarea>
      <br>
      <input type="submit">
    </form>
    <ol>
    <% for(i = 0; i<posts.length; i++){  %>
        <li> <a href="/showPost/<%= posts[i]._id %>">
              <%= posts[i].userName %></a>
              <i>
             <%= posts[i].createdAt %></\/i> <br>
             <%= posts[i].post %>
         </li>
    <% } %>
    </ol>

<%- include('bootfooter') -%>
